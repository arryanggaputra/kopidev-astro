---
import Footer from "~/components/Footer.astro";
import Navbar from "~/components/Navbar.astro";
import { SITE_CONFIG } from "../config/site";

interface Props {
  title: string;
  description?: string;
  fullWidth?: boolean;
  image?: string;
  canonical?: string;
}

const { 
  title, 
  description = SITE_CONFIG.description,
  fullWidth = false,
  image,
  canonical
} = Astro.props;

const generateTitle = `${title} | ${SITE_CONFIG.title}`;
const currentUrl = canonical || new URL(Astro.url.pathname, SITE_CONFIG.url).href;
const imageUrl = image ? new URL(image, SITE_CONFIG.url).href : undefined;
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{generateTitle}</title>
    <meta name="author" content={SITE_CONFIG.author} />
    <link rel="canonical" href={currentUrl} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:site_name" content={SITE_CONFIG.title} />
    <meta property="og:locale" content={SITE_CONFIG.locale} />
    {imageUrl && <meta property="og:image" content={imageUrl} />}
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:creator" content={SITE_CONFIG.social.twitter} />
    {imageUrl && <meta name="twitter:image" content={imageUrl} />}
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    
    <!-- AdSense -->
    <link rel="preconnect" href="https://pagead2.googlesyndication.com">
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9343099184243971"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <Navbar isFullWidht={fullWidth} />
    <main class={fullWidth ? "w-full" : "container max-w-3xl px-5 lg:px-0 mx-auto"}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --frist-main-color: #dc2430;
    --second-main-color: #7b4397;
    --background-color: #111;
    --text-color: #fff;
    --font-serif: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
      "Segoe UI Symbol";
  }
  html {
    scroll-behavior: smooth;
  }

  body {
    background-color: var(--background-color);
    color: var(--text-color);
  }

  .prose code::before,
  .prose code::after {
    content: "";
  }
  .table-of-contents ul {
    @apply relative p-0;
  }
  .table-of-contents ul li {
    @apply relative pl-6 list-none;
  }
  .table-of-contents ul > li::before {
    content: "#";
    position: absolute;
    background: none;
    top: 0px;
    border-radius: 50%;
    width: 0px;
    height: 0px;
    left: 0.25em;
  }
</style>
