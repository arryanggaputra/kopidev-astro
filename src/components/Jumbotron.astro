---
import { Image } from "astro:assets";
import WhatsappButton from "./WhatsappButton.astro";
---

<div class="w-full md:max-w-xl pb-5">
  <div
    class="text-[0.6rem] md:text-xs tracking-widest text-gray-400 font-bold uppercase py-5"
  >
    Experienced Software Developer
  </div>
  <h1 class="text-4xl md:text-6xl font-bold font-serif py-5">
    We build
    <br />
    <span
      class="bg-clip-text bg-gradient-to-r text-transparent from-primary to-yellow-400"
    >
      fast sites & apps.
    </span>
  </h1>
  <div class="text-gray-200 text-base pb-10">
    Maximize your business potential with performant websites built with the
    latest, innovative technologies.
  </div>

  <div class="flex flex-row gap-5">
    <WhatsappButton />
    <a
      href="/about"
      title="Our Experience"
      class="py-4 px-6 rounded-lg bg-[#222] text-sm md:text-base"
    >
      Our Experience
    </a>
  </div>

  <div
    class="text-[0.6rem] md:text-xs tracking-widest text-gray-400 font-bold uppercase py-5"
  >
    Trusted by Innovative Companies & Government
  </div>
  <div class="flex flex-row items-center flex-wrap gap-4">
    <Image
      alt={"Aplikasi Mobile Polda Jawa Timur"}
      width="50"
      height="67"
      src={"/clients/kopidev-polda-jatim.png"}
    />
    <Image
      alt={"Aplikasi Tahanan Polda Kalimantan Selatan"}
      src={"/clients/kopidev-polda-kalsel.png"}
      width="50"
      height="67"
    />
    <Image
      alt={"Aplikasi Tracking Tahanan Satreskoba Polrestabes Surabaya"}
      src={"/clients/kopidev-satreskoba-polrestabes-surabaya.png"}
      width="60"
      height="60"
    />
    <Image
      alt={"Sibiti Indonesia"}
      src={"/clients/sibiti.png"}
      width="90"
      height="32"
    />
  </div>
</div>
